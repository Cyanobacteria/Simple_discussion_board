<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id, :class => "string optional control-label" %>
    <%= form.number_field :user_id, id: :post_user_id, :class => "string optional form-control form-control" %>
  </div>

  <div class="field">
    <%= form.label :title, :class => "string optional control-label" %>
    <%= form.text_field :title, id: :post_title, :class => "string optional form-control form-control" %>
  </div>

  <div class="field">
    <%= form.label :content, :class => "text optional control-label" %>
    <%= form.text_area :content, id: :post_content, :class => "text optional control-label" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
