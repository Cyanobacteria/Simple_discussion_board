<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discussion| %>
      <tr>
         <%=  discussion.id %>
        <td><%= discussion.post_id %></td>
        <td><%= discussion.user_id %></td>
        <td><%= discussion.content %></td>
        <td><%= link_to("Edit", edit_post_discussion_path(@post, discussion), class: "btn btn-default pull-right")%></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

 <%= link_to("Write a comment", new_post_discussion_path(@post), class: "btn btn-default pull-right")%>
