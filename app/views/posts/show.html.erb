<p id="notice"><%= notice %></p>

 <%= link_to("Write a comment", new_post_discussion_path(@post), class: "btn btn-default pull-right")%>

<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
     標題：<%= @post.title %>
     作者：<%= @post.user.profile.name %>
      </h3>
    </div>
    <div class="panel-body">
      內容： <%= @post.content %>
    </div>
    <div class="panel-footer">
    <% if current_user && current_user == @post.user%>
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %> 
    <% end %>
    <%= link_to 'Back', posts_path, class: "btn btn-default" %>
    </div> 
</div>



    <% @discussions.each do |discussion| %>
<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
     作者： <%= discussion.user.profile.name %>
      </h3>
    </div>
    <div class="panel-body">
      內容：<%= discussion.content %>
    </div>
    <div class="panel-footer">
    <% if current_user && current_user == discussion.user%>
        <td><%= link_to("Edit", edit_post_discussion_path(@post, discussion), class: "btn btn-default")%></td>
     <% end %>
    </div>
</div> 
    <% end %>

