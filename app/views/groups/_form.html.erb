<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%f.input :user_id %>
    <%= f.input :name, label: "名稱" %>
    <%= f.input :describe, label: "描述" %>
  </div>

  <div class="form-actions">
    <% f.button :submit, :value => "更新" %>
    <button type="submit" class="btn btn-default"><%= @action_name%></button>
    <!-- @action_name 應該有更好的解法-->
<% end %>
